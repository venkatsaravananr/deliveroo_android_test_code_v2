<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Filmeroo.ThemeOverlay.ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#9C2CF3</item>
    </style>

    <style name="Filmeroo.TextAppearance" parent="TextAppearance.AppCompat" />

    <style name="Filmeroo.TextAppearance.Heading">
        <item name="android:textColor">#161616</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Filmeroo.TextAppearance.Heading.Medium">
        <item name="android:textSize">28sp</item>
        <item name="lineHeight">36sp</item>
    </style>

    <style name="Filmeroo.TextAppearance.Heading.Small">
        <item name="android:textSize">22sp</item>
        <item name="lineHeight">28sp</item>
    </style>

    <style name="Filmeroo.TextAppearance.Body">
        <item name="android:textColor">#2E3333</item>
    </style>

    <style name="Filmeroo.TextAppearance.Body.Medium">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">22sp</item>
    </style>

    <style name="Filmeroo.TextAppearance.Body.Medium.Bold">
        <item name="lineHeight">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Filmeroo.TextAppearance.Body.Small">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="Filmeroo.TextAppearance.Body.XSmall">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="Filmeroo.TextAppearance.Body.XSmall.Inverted">
        <item name="android:textColor">#E6E6E6</item>
    </style>

    <style name="Filmeroo.TextAppearance.CardTitle">
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">#2B2B2B</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
